pipeline {
    agent any
    
    environment {
        DOCKER_USERNAME = credentials('bikeyaxxonet')
        DOCKER_PASSWORD = credentials('lifegood7775')
    }
    
    stages {
        stage('Build') {
            steps {
                sh 'docker build -t $bikeyaxxonet/nginx .'
            }
        }
        
        stage('Push') {
            steps {
                sh 'echo ${lifegood7775} | docker login -u ${bikeyaxxonet} --password-stdin'
                sh 'docker push $bikeyaxxonet/nginx'
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'docker stack deploy -c docker-compose.yml nginx-stack'
            }
        }
    }
    
    post {
        always {
            sh 'docker logout'
        }
    }
}